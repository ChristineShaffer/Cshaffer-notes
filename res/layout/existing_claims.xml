<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="fill_vertical" >

    <Button
        android:id="@+id/updateExistingEmailButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="26dp"
        android:text="E-mail" />

    <Button
        android:id="@+id/updateExistingUpdateButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/updateExistingEmailButton"
        android:layout_alignBottom="@+id/updateExistingEmailButton"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="18dp"
        android:text="Update" />

    <Button
        android:id="@+id/updateExistingDeleteButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/updateExistingEmailButton"
        android:layout_alignParentRight="true"
        android:layout_marginRight="16dp"
        android:text="Delete" />

    <ListView
        android:id="@+id/listView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/updateExistingEmailButton"
        android:layout_alignParentLeft="true"
        android:paddingLeft="50dp" >
    </ListView>

    <TextView
        android:id="@+id/upDateExistingHeaderText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Existing Claims" />

</RelativeLayout>